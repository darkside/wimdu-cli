#!/usr/bin/env ruby
require_relative "../lib/wimdu-cli"

include GLI::App

program_desc 'Wimdu CLI'

command :new do |c|
  c.action do
    Wimdu::Commands::Create.call
  end
end

command :list do |c|
  c.action do
    Wimdu::Commands::List.call
  end
end

command :continue do |c|
  c.action do |_, _, args|
    Wimdu::Commands::Continue.call(args.shift)
  end
end

exit run(ARGV)
